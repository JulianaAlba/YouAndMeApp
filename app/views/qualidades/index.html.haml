%h1 Listagem das qualidades

%table
  %thead
    %tr
      %th Qualidades:
      %th
      %th
      %th

  %tbody
    - @qualidades.each do |qualidade|
      %tr
        %td= qualidade.Nomequalidade
        %td= link_to 'Visualizar', qualidade
        %td= link_to 'Editar', edit_qualidade_path(qualidade)
        %td= link_to 'Excluir', qualidade, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'Criar Nova Qualidade', new_qualidade_path

%p
  .rodape
    = link_to( "Retornar a tela inicial", root_path )

